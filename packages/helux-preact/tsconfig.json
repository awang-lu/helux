{
  "compilerOptions": {
    "declaration": true,
    "baseUrl": "./src",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react",
    "target": "esnext",
    "outDir": "src-js"
  },
  "include": ["src/**/*"]
}
